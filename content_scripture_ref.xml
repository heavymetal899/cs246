<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.steve.scriptureref.ScriptureRef"
    tools:showIn="@layout/activity_scripture_ref"
    android:id="@+id/Reference">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Book"
        android:ems="10"
        android:id="@+id/Book"
        android:layout_marginTop="47dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:allowUndo="false"
        android:autoText="false" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Chapter"
        android:ems="10"
        android:id="@+id/Chapter"
        android:layout_marginTop="91dp"
        android:layout_below="@+id/Book"
        android:layout_alignStart="@+id/Book" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Verse(s)"
        android:ems="10"
        android:id="@+id/Verse"
        android:layout_below="@+id/Chapter"
        android:layout_alignStart="@+id/Chapter"
        android:layout_marginTop="87dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Share"
        android:id="@+id/button"
        android:layout_marginTop="49dp"
        android:layout_below="@+id/Verse"
        android:layout_centerHorizontal="true"
        android:onClick="display" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:id="@+id/testView"
        android:layout_below="@+id/Book"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
